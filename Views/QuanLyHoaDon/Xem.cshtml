@using OnlineShop.Models
@model IEnumerable<ChiTietHoaDon>
@{
    ViewBag.Title = "Xem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Chi Tiết Đơn Hàng</h2>
<table class="zui-table">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.MaSp</td>
        <td>@item.TenSp</td>
        <td>@item.SoLuong</td>
        <td>@item.DonGia.Value.ToString("#,##") đ</td>
    </tr>      
    }

</table>
<br />
@{ 
    decimal tong = 0;
    foreach(var item in Model)
    {
        tong = tong + item.DonGia.Value;
    }
}
<h2>Tổng Tiền : @tong.ToString("##,#") đ</h2>
<style>
    .zui-table {
        border: solid 1px #DDEEEE;
        border-collapse: collapse;
        border-spacing: 0;
        font: normal 16px Arial, sans-serif;
    }

        .zui-table thead th {
            background-color:lightskyblue;
            border: solid 1px #DDEEEE;
            color: #336B6B;
            padding: 10px;
            text-align: left;
            text-shadow: 1px 1px 1px #fff;
        }

        .zui-table tbody td {
            border: solid 1px #DDEEEE;
            color: #333;
            padding: 10px;
            text-shadow: 1px 1px 1px #fff;
        }
</style>

